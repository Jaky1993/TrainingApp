@model TrainingApp.VIEWMODEL.UserViewModel

<form asp-action="DoCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />

        @ViewBag.Error

        <div class="row">
            <!-- Name -->
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!-- Age -->
            <div class="col-2">
                <label asp-for="Age" class="control-label pt-2" style="font-size:20px"></label>
                <span class="text-danger"></span>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Age" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="col-2">
                <label asp-for="Password" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Password" class="form-control" type="password" />
                <span class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="Villa" class="btn-primary btn form-control">Back to list</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control">
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
