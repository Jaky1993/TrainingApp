@model TrainingApp_WebAPI.VIEWMODEL.UserViewModel

<form asp-action="DoUpdate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create user</h1>
        <hr />
        <div class="row">
            <div id="apiErrorList"></div>
            <!-- Name -->
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" id="errorName"></span>
            </div>

            <!-- Description -->
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span class="text-danger"></span>
            </div>

            <!-- Username -->
            <div class="col-2">
                <label asp-for="UserName" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserName" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <!-- Age -->
            <div class="col-2">
                <label asp-for="Age" class="control-label pt-2" style="font-size:20px"></label>
                <span class="text-danger"></span>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Age" class="form-control" />
                <span class="text-danger"><p id="errorAge"></p></span>
            </div>

            <!-- Password -->
            <div class="col-2">
                <label asp-for="Password" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Password" class="form-control" type="password" />
                <span class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="List" asp-controller="User" class="btn-primary btn form-control">Back to list</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control">
            </div>
            <input type="hidden" id="apiErrorList" data-value1="@Json.Serialize(ViewBag.ApiErrorList)" />
            <input type="hidden" id="entityErrorList" data-value2="@ViewBag.EntityValidationErrorList" />
        </div>
    </div>
</form>

<script src="~/js/create.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
